    {% block basecss %}
    <link href="{{ media_url('css/bootstrap.css') }}" rel="stylesheet">
    <style type="text/css">
        body {
            padding-top: 0px;
            padding-bottom: 40px;
        }

	.banner .container-narrow a, p > a {
          border-bottom: 1px solid;  
          border-color: #D0D0D0;
        } 
        .banner .container-narrow a:hover, p > a:hover {
          border-bottom: 1px solid;
          text-decoration: none;
        } 

	/* fancy fade in effect for hovering over links */
	a, .about .navbar .nav > li > a {
	  /* First we need to help some browsers along for this to work.
     Just because a vendor prefix is there, doesn't mean it will
     work in a browser made by that vendor either, it's just for
     future-proofing purposes I guess. */
	-o-transition:.5s;
	-ms-transition:.5s;
	-moz-transition:.5s;
	-webkit-transition:.5s;
	/* ...and now for the proper property */
	transition:.5s;
	}

        .navbar .nav > li > a:hover {
            background-color: #FEF1ED;
	 /*   background-color: #E6F5E6; */
        }
    
        .navbar .nav > .active > a {
            background-color: #FEF1ED;
        }

        .navbar .nav > .active > a:hover {
            background-color: #FEF1ED;
        }


        input, textarea, .uneditable-input {
           width: 30px;
        }
	code {
	    text-decoration: none;
	    color: black;
	}

      .cosmo {
        font-family: "Helvetica", sans-serif;
        color: black;
       }

    .cosmo input {
        font-family: "Helvetica", sans-serif;
    }

    .footer {
        font-size: 80%;
        font-family: "Helvetica", sans-serif;
    }

    .cosmo td {
        padding: 5px;
    }

      /* Custom container */
      .container-wide {
        margin: 0 auto;
	margin-left: auto;
	margin-right: auto;
        width: 800px;
      }


      .container-narrow {
        margin: 0 auto;
        width: 620px;
	float: right;
	text-align: justify;
      }
      .container-narrow > hr {
        margin: 30px 0;
      }

      .navbar {
    margin-bottom: 0;
    padding-bottom: 0px;
    }

      .navbar ul {
    padding-left: 100px;
    }

      .banner {
    width: 1000px;
    margin: 0 auto;
    padding-bottom: 20px;
    /* padding-top: 20px; for default menu */
    padding-top: 80px;
      }

      .banner p {
    font-family: "Helvetica", sans-serif;
    font-size: 80%;
    padding-right: 10px;
    float: right;
    }

    .container-narrow > blockquote {
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
    }

      .about {
    padding-top: 30px;
    padding-left: 10px;
    padding-right: 20px;
    padding-bottom: 20px;
    max-width: 150px;
    float: left;
    }

    .about ul {
	list-style-type: none;
	padding: 0;
	margin:  0;
	font-size: 14px;
        font-family: "Helvetica", sans-serif;
        color: #000;
	line-height: 25px;
    }

    .about a {
        color: #000;
    }

    .about img {
        vertical-align: middle;
        max-width: 100px;
    }

    </style>
    <link href="{{ media_url('css/bootstrap-responsive.css') }}" rel="stylesheet">
    {% endblock basecss %}
    {% block css %}{% endblock %}

    {% block favicons %}
    {# Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references #}
    <link rel="shortcut icon" href="{{ media_url('img/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ media_url('img/apple-touch-icon.png') }}">
